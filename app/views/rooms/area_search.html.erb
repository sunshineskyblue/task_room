<% content_for(:title, "「#{@search_area}」の検索結果") %>
<div class="search_container"> 
  <h2 class="serach_count">検索結果：<%= @rooms.size %>件</h2>
  <div class="room_frame_outer">
    <% @rooms.each do |room| %>
      <div class="room_frame_inner">
        <%= link_to(room_path(room)) do  %>
          <div class="room_image">
            <% if room.room_image.attached? %>
              <%= image_tag room.room_image, class: 'image_room' %>
            <% end %>
          </div>
          <div class="room_profile">
            <div class="profile_room_name">
              <p><%= room.room_name %></p>
            </div>
            <p class="profile_room_adress"><%= room.adress %></p>
            <p class="profile_room_fee">￥<%= room.fee.to_s(:delimited) %>/日</p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
